<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="VirtuaFeaturedProducts.config" class="Shopware\Components\Plugin\CachedConfigReader">
            <factory service="shopware.plugin.cached_config_reader" method="getByPluginName"/>
            <argument type="string">VirtuaFeaturedProducts</argument>
        </service>

        <service class="VirtuaFeaturedProducts\Subscribers\FrontendRoutingSubscriber" id="virtua_featured_products.subscribers.frontend_routing_subscriber">
            <argument type="service" id="VirtuaFeaturedProducts.config"/>
            <tag name="shopware.event_subscriber" />
        </service>


    </services>
</container>
